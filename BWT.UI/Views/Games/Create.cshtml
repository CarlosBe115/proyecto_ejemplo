@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}
<div class="pagetitle">
    <h1>Videojuegos</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../Dash/Index">Home</a></li>
            <li class="breadcrumb-item">Videojuegos</li>
            <li class="breadcrumb-item active">Agregar Elemento</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Agregar Elemento</h5>
                    <!-- Multi Columns Form -->
                    <p class="text-danger">
                        @TempData["message"]
                    </p>

                    <form class="row g-3" method="post" asp-controller="Games" asp-action="Create">
                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">Nombre del Videojuego</label>
                            <input type="text" class="form-control" id="inputName5" name="NameGame">
                        </div>
                        <div class="col-12">
                            <label for="inputAddress5" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="inputAddres5s" placeholder="Descripción" name="DescriptionGame">
                        </div>
                        <div class="col-md-4">
                            <label for="inputZip" class="form-label">Límite de Usuarios</label>
                            <input type="text" class="form-control" id="inputUsuarios" name="LimitUserGames">
                        </div>
                        @*<div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gridCheck">
                                    <label class="form-check-label" for="gridCheck">
                                        Check me out
                                    </label>
                                </div>
                            </div>*@
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Agregar</button>
                            <button type="reset" class="btn btn-secondary">Cancelar</button>
                        </div>
                    </form><!-- End Multi Columns Form -->
                </div>
            </div>
        </div>
    </div>
</section>