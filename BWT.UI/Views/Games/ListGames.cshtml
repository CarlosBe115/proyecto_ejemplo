
@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
    var listgame = (ApiResponse<IEnumerable<Games>>)ViewBag.listgame;
}

<div class="pagetitle">
    <h1>VideoJuegos</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../Dash/Index">Home</a></li>
            <li class="breadcrumb-item">VideoJuegos</li>
            <li class="breadcrumb-item active">Lista de VideoJuegos</li>
        </ol>
    </nav>
</div>
<div class="row">
    <!-- Top Selling -->
    <div class="col-12">
        <div class="card top-selling overflow-auto">

            <div class="card-body pb-0">
                <h5 class="card-title">Lista de Clanes <span>BWT </span></h5>

                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">Imagen</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Máx. Usuarios</th>
                                
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var i in listgame.Data)
                            {
                                <tr>
                                    <th scope="row" ><img style="height:50px;width:50px" src="@i.ImageGame" /> </th>
                                    <td>@i.NameGame</td>
                                    <td>@i.DescriptionGame</td>
                                    <td class="fw-bold">@i.LimitUserGames</td>
                                    
                                </tr>
                               
                            }
                            </tbody>
                    </table>

          


            </div>
        </div>
    </div>
</div>

