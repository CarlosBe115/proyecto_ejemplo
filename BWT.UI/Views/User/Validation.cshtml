
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/img/favicon.ico" rel="icon">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <script type="text/javascript" src="~/js/login.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" />
</head>
<body>
    @*<div class="bubbles">
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
            <div class="circle"></div>
        </div>*@
    <div class="container">
        <div class="d-flex justify-content-center align-items-center flex-wrap mt-5">
            <div class="content">
                <div class="h4 text-black-50">Inicia sesión o regístrate</div>
                <div class="fs-5 text-black-50">para iniciar tu aventura gamer...</div>
                <div class="text my-4 text-grey" style="font-style: italic;"> Black Warriors Team </div>
                <div class="d-flex align-items-center pt-3 mt-4">

                </div>
            </div>

            <div class="form-card mt-5">
                <div class="card">
                    @*<div class="card-head bg-white">
                        <p class="m-0 text-center fs-08">Registrese con </p>
                        <div class="d-flex align-items-center justify-content-center my-2">
                            <div class="btn btn-default"> <img src="https://www.freepnglogos.com/uploads/512x512-logo-png/512x512-logo-github-icon-35.png" alt=""> <span>GitHUb</span> </div>
                            <div class="btn btn-default mx-3"> <img src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt=""> <span>Google</span> </div>
                        </div>
                    </div>*@
                      <div class="card-form">
                          <h4 class="text-center text-muted fs-08 mt-3">Login</h4>
                          <p class="text-danger">@TempData["message"]</p>
                          <form method="post" asp-controller="User" asp-action="Validation">
                              <div class="d-flex align-items-center input-field"> 
                                  <span class="far fa-envelope text-muted"></span> 
                                  <input type="email" placeholder="Email" class="form-control" required name="EmailAddress">
                              </div>
                              <div class="d-flex align-items-center input-field"> 
                                <span class="fas fa-key text-muted"></span> 
                                <input type="password" placeholder="Password" class="form-control" required name="EmailPassword"> 
                              </div>

                              <div class="d-flex justify-content-center">
                                  <a class="btn btn-primary mt-3 me-2" href="@Url.Content("~/User/Register")">Registrarse</a>
                                  <button type="submit" class="btn btn-primary mt-3">Acceder</button>
                              </div>
                          </form>
                          <p class="text-decoration-none text-muted text-center mt-3">
                              <a href="@Url.Content("~/User/Recover")">
                                  ¿Olvido su contraseña? Restaurar contraseña
                              </a>
                          </p>
                          @*<div class="d-flex align-items-center"> <input type="checkbox" name="remember" id="remember"> <label class="text-muted ms-2" for="remember">Remember me</label> </div>*@
                      </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.min.js" integrity="sha512-SttpKhJqONuBVxbRcuH0wezjuX+BoFoli0yPsnrAADcHsQMW8rkR84ItFHGIkPvhnlRnE2FaifDOUw+EltbuHg==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>